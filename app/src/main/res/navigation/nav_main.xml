<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.nmedia.activities.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="content"
                app:argType="string" />
            <argument
                android:name="video_link"
                app:argType="string"
                />
        </action>
        <action
            android:id="@+id/action_feedFragment_to_currentPostFragment"
            app:destination="@id/currentPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="postId"
                app:argType="long" />
        </action>
        <action
            android:id="@+id/action_feedFragment_to_imageFragment"
            app:destination="@id/imageFragment">
            <argument
                android:name="imageArg"
                app:argType="string"
                />

        </action>
        <action
            android:id="@+id/action_feedFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_feedFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />

    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="com.example.nmedia.activities.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" >
        <argument
            android:name="content"
            app:argType="string"
             />
        <argument
            android:name="video_link"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/currentPostFragment"
        android:name="com.example.nmedia.activities.CurrentPostFragment"
        android:label="CurrentPostFragment"
        tools:layout="@layout/fragment_current_post">
        <argument
            android:name="postId"
            app:argType="long" />
        <action
            android:id="@+id/action_currentPostFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="content"
                app:argType="string" />
            <argument
                android:name="video_link"
                app:argType="string"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.example.nmedia.activities.ImageFragment"
        android:label="fragment_image"
        tools:layout="@layout/fragment_image" >
        <argument
            android:name="imageArg"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.nmedia.activities.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.nmedia.activities.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
</navigation>